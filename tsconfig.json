{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": false,
    "inlineSources": false,
    "allowJs": false,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"]
  }
}
